@model DOCTER_UD
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nhân viên</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Thông tin nhân viên
                </div>
                <div class="panel-body">
                    <form role="form" action="/DOCTER/Add" method="POST">
                        <input type="hidden" name="Id" value="@Model.id" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Tên</label>
                                    @Html.TextBoxFor(x => x.name, new { @class = "form-control", @placeholder = "Tên", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <label>Ngày sinh</label>
                                    @Html.TextBoxFor(x => x.dob, new { @class = "form-control", @placeholder = "Ngày sinh" })
                                </div>
                                <div class="form-group">
                                    <label>Giới tính</label>
                                    @Html.TextBoxFor(x => x.sex_id, new { @class = "form-control", @placeholder = "Giới tính" })
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    @Html.TextAreaFor(x => x.info_p, new { @class = "form-control", @placeholder = "Mô tả" })
                                </div>
                                <div class="form-group">
                                    <label>Nơi công tác</label>
                                    @Html.TextBoxFor(x => x.hospital, new { @class = "form-control", @placeholder = "Nơi công tác" })
                                </div>
                                <div class="form-group">
                                    <label>Mã nhân viên</label>
                                    @Html.TextBoxFor(x => x.year, new { @class = "form-control", @placeholder = "Mã nhân viên" })
                                </div>
                                <div class="form-group">
                                    <label>Tỉnh thành</label>
                                    @Html.DropDownList("province_id", (IEnumerable<SelectListItem>)ViewBag.ListPROVINCE, "- Tỉnh thành -", new { @class = "form-control", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    @Html.TextBoxFor(x => x.address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                </div>
                                <div class="form-group">
                                    <label>Longitude</label>
                                    @Html.TextBoxFor(x => x.longitude, new { @class = "form-control", @placeholder = "Longitude" })
                                </div>
                                <div class="form-group">
                                    <label>latitude</label>
                                    @Html.TextBoxFor(x => x.latitude, new { @class = "form-control", @placeholder = "latitude" })
                                </div>
                                @*<div class="form-group">
                                    <label>Hình ảnh</label>
                                    <img id="preview-avartar" src="@(string.IsNullOrWhiteSpace(Model.avartar) ? "/Uploads/no-images.png" : Model.avartar)" width="50px" style="display: block; padding-bottom: 3px;" />
                                    <input type="hidden" name="avartar" value="@Model.avartar" id="avartar" />
                                    <input type="file" name="file" id="fileupload" up-type="avt" ip-h="avartar">
                                    <div id="progress-wrp" style="display: none">
                                        <div class="progress-bar"></div>
                                        <div class="status">0%</div>
                                    </div>
                                </div>*@
                                <div class="form-group">
                                    <label>Star</label>
                                    @Html.TextBoxFor(x => x.star, new { @class = "form-control", @placeholder = "Star" })
                                </div>
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    @Html.DropDownListFor(x => x.status, HtmlExtensions.ToSelectList<StatusGlobal>(), new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Dịch vụ</label>
                                    @{
                                        var service_lst = (List<SERVICE_UD>) ViewBag.ListSERVICE;
                                        foreach (var service in service_lst)
                                        {
                                            var checked_str = false;
                                            if (Model.id > 0)
                                            {
                                                var i_service_lst = (List<DOCTER_IN_SER_UD>) ViewBag.LSTIN_SERVICE;
                                                checked_str = i_service_lst.Any(x => x.service_id == service.id);
                                            }

                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" value="@service.id" id="service_ids" name="service_ids" @(checked_str ? "checked" : "")>@service.name
                                                </label>
                                                <input type="text" name="price_@service.id" class="form-control" placeholder="Price" value=""/>
                                            </div>
                                        }

                                    }
                                </div>
                                @if (Model.id <= 0) {
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" name="email" class="form-control" required="required" placeholder="Email address" />
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" name="password" class="form-control" required="required" placeholder="Password" />
                                    </div>
                                    <div class="form-group">
                                        <label>Điện thoại</label>
                                        <input type="text" name="phone" class="form-control" required="required" placeholder="Điện thoại" />
                                    </div>
                                }
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary">Cập nhập</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
