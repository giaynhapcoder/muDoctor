@model IEnumerable<mUDocter.Business.Models.API.BOOKING_INFO>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">THÔNG TIN ĐẶT LỊCH</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            NHÂN VIÊn @ViewBag.NVName
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @if (Model != null)
                    {
                        int i = 0;
                        int Tongngaykham = 0;
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>MÃ</th>
                                    <th>Tên</th>
                                    <th>Thời gian</th>
                                    <th>Trạng thái</th>
                                    <th>Số ngày tắm</th>
                                    <th>Số ngày VS</th>
                                    <th>Thành Tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var _x in Model)
                                {
                                    if (_x.status == (int) BOOKING_STATUS.HOAN_THANH)
                                    {
                                        Tongngaykham = Tongngaykham + _x.vs_date + _x.tam_date;
                                    }
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@_x.id</td>
                                        <td>@_x.patient_name</td>
                                        <td>@_x.updated</td>
                                        <td>@StringHelper.ConvertBoookStatus(_x.status)</td>
                                        <td>@_x.tam_date</td>
                                        <td>@_x.vs_date</td>
                                        <td>@String.Format("{0:0,0}", (_x.tam_date + _x.vs_date)*300000) VND</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="7"><b>Tổng tiền hoàn thành : </b></td>
                                    <td><b>@String.Format("{0:0,0}", Tongngaykham * 300000) VND</b></td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
</div>
