@model IEnumerable<SETTING_UD>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cầu hình hệ thống</h1>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            Cầu hình hệ thống
                        </div>
                        <div class="col-sm-6 text-right">
                            <a href="/Setting/Add" class="btn btn-primary btn-xs"><i class="glyphicon-plus"></i> Thêm mới</a>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @if (Model != null)
                    {
                        int i = 0;
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>MÃ</th>
                                    <th>Tên</th>
                                    <th>Mô tả</th>
                                    <th style="width: 100px;text-align: center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var _x in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@_x.SETTING_KEY</td>
                                        <td>
                                            @if (_x.SETTING_KEY == "AVATAR_DOCTER_DEFAULT")
                                            {
                                                <img src="@_x.VALUES_KEY" width="50px" height="50px" style="display: block; padding-bottom: 3px;" />
                                            }
                                            else
                                            {
                                                @_x.VALUES_KEY
                                            }
                                        </td>
                                        <td>@_x.DES_KEY</td>
                                        <td style="text-align: center">
                                            <a href="/Setting/Add?id=@_x.SETTING_KEY" class="btn btn-primary btn-xs" title="edit"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>

    </div>
</div>
