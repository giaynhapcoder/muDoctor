@model SETTING_UD

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Setting hệ thống</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Setting hệ thống
                </div>
                <div class="panel-body">
                    <form role="form" action="/Setting/Save" method="POST">
                        <input type="hidden" name="Id" value="@Model.SETTING_KEY" />
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>KEY</label>
                                    @Html.TextBoxFor(x => x.SETTING_KEY, new {@class = "form-control", @placeholder = "Key", @required = "required"})
                                </div>
                                @if (Model.SETTING_KEY == "AVATAR_DOCTER_DEFAULT")
                                {
                                    <div class="form-group">
                                        <label>Hình ảnh</label>
                                        <img id="preview-VALUES_KEY" src="@(Model.VALUES_KEY.Length < 5 ? "/Uploads/no-images.png" : Model.VALUES_KEY)" width="50px" style="display: block; padding-bottom: 3px;" />
                                        <input type="file" name="file" id="fileupload" up-type="avt" ip-h="VALUES_KEY">
                                        <div id="progress-wrp" style="display: none">
                                            <div class="progress-bar"></div>
                                            <div class="status">0%</div>
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label>Giá trị</label>
                                    @Html.TextBoxFor(x => x.VALUES_KEY, new { @class = "form-control", @placeholder = "Giá trị", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    @Html.TextBoxFor(x => x.DES_KEY, new { @class = "form-control", @placeholder = "Mô tả" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary">Cập nhập</button>
                                <button type="reset" class="btn btn-default">Làm mới</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
